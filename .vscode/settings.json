{
  // General editor config
  "editor.formatOnSave": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.insertFinalNewline": true,
  "[cpp]": { "editor.defaultFormatter": "ms-vscode.cpptools" },
  "terminal.integrated.scrollback": 10000,

  // Todo tree settings
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "INFO"],
  "todo-tree.highlights.defaultHighlight": {
    "type": "tag-and-comment",
    "foreground": "#000000"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": { "background": "#FFFF00" },
    "FIXME": { "background": "#FF0000" },
    "INFO": { "background": "#FFA500" }
  },
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|\\*|/\\*\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",

  // Prettier auto format config
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: true, ColumnLimit: 0, AccessModifierOffset: -4, SortIncludes: false, AlignConsecutiveMacros: Consecutive}",
  "cSpell.words": []
}
